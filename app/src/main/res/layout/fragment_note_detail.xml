<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context="org.rouif.notes.fragment.NoteDetailFragment">

    <EditText
        android:background="@null"
        android:hint="@string/note_detail_title_hint"
        style="?android:textAppearanceLarge"
        android:id="@+id/note_detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:background="@null"
        style="?android:textAppearanceSmall"
        android:id="@+id/note_detail_update"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:hint="@string/note_detail_content_hint"
        android:gravity="left|top"
        android:background="@null"
        style="?android:textAppearanceMedium"
        android:id="@+id/note_detail_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
